head
  title Order Page
  style.
    .column {
    float: left;
    }
    .left{
    width: 10%;
    }
    .right {
    width: 25%;
    }
    .middle {
    width: 65%;
    }
    .marginMiddle {
    text-align: center;
    width: 75%;
    }
    .marginRight {
    float: right;
    width: 25%;
    text-align: right;
    }
    .spaced {
        margin-left: 1em;
    }
body
    header
        -if (loggedIn)
            div(class="marginMiddle")
                a(href="http://localhost:3000/") Home
                |  
                a(href="http://localhost:3000/users" class="spaced") Users    
                |  
                a(href="http://localhost:3000/order" class="spaced") Order Form    
                div(class="marginRight")
                    a(href="http://localhost:3000/my-profile") My Profile  
                    button(id="logoutbtn" class="spaced" value="Submit") Logout
                    script(src="http://localhost:3000/logout.js" onload="init()")
        -else
            div(class="marginMiddle spaced")
                a(href="http://localhost:3000/") Home    
                |  
                a(href="http://localhost:3000/users" class="spaced") Users    
                |  
                a(href="http://localhost:3000/registration" class="spaced") Register   
                |
                div(class="marginRight")
                    a(href="http://localhost:3000/login") Login

    -let order = JSON.parse(data);
    
    h1 Orderer 
    p=order.user 
    br
    br
    h2 Restaurant 
    p=order.restName 
    br
    br
    h4 Items 
    ol
        -for (let item in order.items) 
            li=order.items[item].quantity +" x " + order.items[item].name
    br
    br
    h4 Reciept
    ul
        li 
            ="Subtotal: $" + order.subtotal
        li 
            ="Delivery Fee: $" + order.fee
        li 
            ="Tax: $" + order.tax 
        li 
            ="Grand Total: $" + order.total
    br
    br